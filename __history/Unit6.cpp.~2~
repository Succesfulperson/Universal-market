#include <vcl.h>
#pragma hdrstop

#include "Unit6.h"
#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma link "PraButtonStyle"
#pragma resource "*.dfm"
TForm6 *Form6;
//---------------------------------------------------------------------------
__fastcall TForm6::TForm6(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm6::PraButtonStyle39Click(TObject *Sender)
{
 String kategoriya = InputBox("Qo`shish", "Iltimos kategoriya nomini kiriting", "");
 if (kategoriya!="")
 {
  DataModule1->ADOQueryCategory->SQL->Clear();
  DataModule1->ADOQueryCategory->SQL->Add("INSERT INTO category VALUE('', "+kategoriya+", "+Date().toAnsiString()+")");
  DataModule1->ADOQueryCategory->Active=true;
 }
  DataModule1->ADOQueryCategory->SQL->Clear();
  DataModule1->ADOQueryCategory->SQL->Add("SELECT  *  FROM category;");
  DataModule1->ADOQueryCategory->Active=true;
}
//---------------------------------------------------------------------------
