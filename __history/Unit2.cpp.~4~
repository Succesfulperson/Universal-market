void __fastcall TForm2::PraButtonStyle39Click(TObject *Sender)
{
	TDate sana=Now().CurrentDate();
	DataModule1->ADOQueryombor->Open();
	DataModule1->ADOQueryombor->SQL->Text="insert  into store(id,barcode,product_name,desc,category,list_price,min_price,volume,type,warranty_date,supplier_id,date,status) values('"+LabeledEditshtrix->Text.Trim()+"','"+LabeledEditnomi->Text.Trim()+"','"+LabeledEditizoh->Text.Trim()+"','"+LabeledEditcategory->Text.Trim()+"','"+LabeledEditolish->Text.Trim()+"','"+LabeledEditsotish->Text.Trim()+"','"+LabeledEditmiqdori->Text.Trim()+"','"+ComboBox1->Text.Trim()+"','"+DateTimePicker1->DateTime+"','"+ComboBoxkuriyer->Text.Trim()+"','"+sana+"','"+LabeledEditstatus->Text.Trim()+"')";
	DataModule1->ADOQueryombor->Close();
	DataModule1->ADOQueryombor->SQL->Text="select * from store";
	DataModule1->ADOQueryombor->Open();
}
